# Configuration de Production AFRIQUADIS
NODE_ENV=production

# Base de données de production
DATABASE_URL="postgresql://username:password@production-db-host:5432/afriquadis_prod"

# NextAuth
NEXTAUTH_URL=https://bilan-express.afriquadis.com
NEXTAUTH_SECRET=your-super-secure-production-secret-key-here

# OpenAI (optionnel)
NEXT_PUBLIC_OPENAI_API_KEY=your-production-openai-api-key

# Services externes
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Email (SMTP)
SMTP_HOST=smtp.afriquadis.com
SMTP_PORT=587
SMTP_USER=no-reply@afriquadis.com
SMTP_PASSWORD=your-smtp-password

# WhatsApp Business API
WHATSAPP_API_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Cache et Performance
REDIS_URL=redis://production-redis-host:6379
CACHE_TTL=3600

# Sécurité
CORS_ORIGIN=https://bilan-express.afriquadis.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
